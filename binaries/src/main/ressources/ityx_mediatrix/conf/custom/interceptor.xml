<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <description>
        Configure the hibernate interceptor within this file.
        
        If the system (or contex) property "de.ityx.hibernate.interceptor" 
        points to this file, a single bean of type org.hibernate.Interceptor is expected to be configured. 
                                
    </description>

    <bean id="contexInterceptor" class="de.ityx.contex.dba.CompositeInterceptor">
       <property name="interceptorMap">
            <map>
                <entry key="de.ityx.contex.dbo.designer.Designer_documentpooldata">
                    <bean class="de.ityx.contex.dbo.designer.interceptors.VFSDocPoolInterceptor">
                        <property name="username" value="" />
                        <property name="password" value="" />
                    </bean>
                </entry>
                
                <entry key="de.ityx.contex.dbo.designer.Designer_flowenginebindata">
                    <bean class="de.ityx.contex.dbo.designer.interceptors.VFSClusterPoolInterceptor">
                        <property name="username" value="" />
                        <property name="password" value="" />
                    </bean>
                </entry>
            </map>
        </property>
    </bean>
    
    
</beans>