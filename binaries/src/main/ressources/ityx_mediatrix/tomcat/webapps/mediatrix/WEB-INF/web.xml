<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">
  
  <listener>
    <listener-class>
      de.ityx.base.ConnectionCloseListener
    </listener-class>
  </listener>
  
  <listener>
    <listener-class>
      de.ityx.base.SystemUpDownListener
    </listener-class>
  </listener>
  
  <listener>
    <listener-class>
      de.ityx.base.SessionActiveChecker
    </listener-class>
  </listener>
  
  <!-- -->
  <!-- Comment this out, if you unit-base-directory is <em>not</em> your home-direktory
  <context-param>
    <param-name>unithome</param-name>
    <param-value>/here/is/the/base/of/my/unit/folder</param-value>
  </context-param>
  -->
  
  <servlet>
    <servlet-name>iconservice</servlet-name>
    <servlet-class>de.ityx.mediatrix.server.servlet.IconServlet</servlet-class>
    <load-on-startup>5</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>kampagneservice</servlet-name>
    <servlet-class>de.ityx.mediatrix.server.servlet.MediatrixKampagneServlet</servlet-class>
    <load-on-startup>4</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>emailservice</servlet-name>
    <servlet-class>de.ityx.mediatrix.server.servlet.MediatrixEmailServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>servletservice</servlet-name>
    <servlet-class>de.ityx.base.BaseServlet</servlet-class>
    <init-param>
        <param-name>connectToContEx</param-name>
        <param-value>true</param-value>
    </init-param>
    <load-on-startup>3</load-on-startup>
  </servlet>  
  
   <servlet-mapping>
     <servlet-name>iconservice</servlet-name>
     <url-pattern>/mediatrixicon</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
        <servlet-name>kampagneservice</servlet-name>
        <url-pattern>/mediatrixkampagne</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
        <servlet-name>emailservice</servlet-name>
        <url-pattern>/mediatrixemail</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
        <servlet-name>servletservice</servlet-name>
        <url-pattern>/mediatrix</url-pattern>
  </servlet-mapping>
 
  <servlet>
    <servlet-name>jnlp</servlet-name>
    <servlet-class>de.ityx.mediatrix.server.servlet.MediatrixJNLPServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>jnlp</servlet-name>
    <url-pattern>/jnlp</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jnlp</servlet-name>
    <url-pattern>/jnlp/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>jars</servlet-name>
    <servlet-class>de.ityx.mediatrix.server.servlet.JarServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>jars</servlet-name>
    <url-pattern>/jars</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>jars</servlet-name>
    <url-pattern>/jars/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>extension</servlet-name>
    <servlet-class>de.ityx.mediatrix.server.servlet.ExtensionJarServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>extension</servlet-name>
    <url-pattern>/extension/*</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>extension</servlet-name>
    <url-pattern>/extension</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>notifyUsers</servlet-name>
    <servlet-class>de.ityx.mediatrix.server.servlet.NotifyUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>notifyUsers</servlet-name>
    <url-pattern>/notify_users</url-pattern>
  </servlet-mapping>

   <!-- Spring-Remoting aktivieren -->
   <!-- <servlet> -->
   <!--  <servlet-name>remoting</servlet-name> -->
   <!-- <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class> -->
   <!-- <load-on-startup>1</load-on-startup> -->
